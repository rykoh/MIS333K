@model Kohanski_Ryan_HW3.Models.CateringOrder

@{
    ViewData["Title"] = "CheckoutCatering";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Checkout Catering</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CateringTotals">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NumberOfTacos" class="control-label"></label>
                <input asp-for="NumberOfTacos" class="form-control" />
                <span asp-validation-for="NumberOfTacos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfSandwiches" class="control-label"></label>
                <input asp-for="NumberOfSandwiches" class="form-control" />
                <span asp-validation-for="NumberOfSandwiches" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CustomerCode" class="control-label"></label>
                <input asp-for="CustomerCode" class="form-control" />
                <span asp-validation-for="CustomerCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeliveryFee" class="control-label"></label>
                <input asp-for="DeliveryFee" class="form-control" />
                <span asp-validation-for="DeliveryFee" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="PreferredCustomer" /> @Html.DisplayNameFor(model => model.PreferredCustomer)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Home Page</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
