@model Kohanski_Ryan_HW6.Models.Product

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductPrice)
        </dd>
    </dl>
</div>

@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <h5>Suppliers for this Product</h5>
    <table class="table table-bordered">
        <tr>
            <th>Supplier Title</th>
        </tr>
        @foreach (ProductSupplier ps in Model.ProductSuppliers)
        {
            <tr>
                <td>@ps.Supplier.SupplierName</td>
            </tr>
        }
    </table>
}
<div>
    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model.ProductID">Edit</a> <!-- span? -->
    }
    <a asp-action="Index">Back to List</a>
</div>
