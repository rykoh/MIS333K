@model sp20team13finalproject.Models.ViewModels.ManagementViewModel
@using sp20team13finalproject.Controllers

@{
    ViewData["Title"] = "Create Reservation";
}

<h1>Create Reservation</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="CreateManagement">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AdvantageNum" class="control-label"></label>
                @Html.DropDownList("SelectedCustomer", (SelectList)ViewBag.AllCustomers, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="ReservationNum" class="control-label"></label>
                <input asp-for="ReservationNum" class="form-control" />
                <span asp-validation-for="ReservationNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlightNum" class="control-label"></label>
                <input asp-for="FlightNum" class="form-control" />
                <span asp-validation-for="FlightNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seat" class="control-label"></label>
                @Html.DropDownList("SelectedSeat", (SelectList)ViewBag.AllSeats, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}