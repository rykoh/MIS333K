@model IEnumerable<sp20team13finalproject.Models.Reservation>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.IsInRole("Management"))
{
    <a asp-action="CreateManagement">Create New</a>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReservationNum)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ReservationNum)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ReservationID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ReservationID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ReservationID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>